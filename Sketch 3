parse1 = Lyrics1.replace('\n',",")
parse2 = Lyrics2.replace('\n',",")
#print(parse1)
#print(parse2)

array1 = parse1.split(",")
array2 = parse2.split(",")
#print(array1)
#print(array2)

newSong= []

#remove empty string elements from array
for i in range(4):
    current1 = random.choice(array1)
    current2 = random.choice(array2)
    newSong.append(current1)
    newSong.append(current2)

print(newSong)
